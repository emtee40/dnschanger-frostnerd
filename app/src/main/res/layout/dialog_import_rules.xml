<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_dnsmasq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/file_dnsmasq"
                android:textColor="?android:attr/textColor" />

            <RadioButton
                android:id="@+id/radio_hosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/file_hosts"
                android:textColor="?android:attr/textColor" />

            <RadioButton
                android:id="@+id/radio_justdomains"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/file_justdomains"
                android:textColor="?android:attr/textColor" />

            <RadioButton
                android:id="@+id/radio_adblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/file_adblock"
                android:textColor="?android:attr/textColor" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/detect_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/detect_rule_type"
            android:textColor="?android:attr/textColor" />

        <CheckBox
            android:id="@+id/fail_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/fail_fast"
            android:textColor="?android:attr/textColor" />

        <TextView
            android:id="@+id/fail_fast_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disable_failfast_info"
            android:textColor="?android:attr/textColor" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="?attr/inputElementColor"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/select_files" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>